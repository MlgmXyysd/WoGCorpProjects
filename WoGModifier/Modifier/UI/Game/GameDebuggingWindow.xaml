<m:GlassWindow x:Class="Mygod.WorldOfGoo.Modifier.UI.GameDebuggingWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:m="http://schemas.mygodstudio.tk/wpf" Closed="StopDebugging"
               Height="450" Width="600" Icon="{x:Static m:CurrentApp.MainIcon}">
    <m:GlassWindow.Title>
        <MultiBinding Converter="{StaticResource TitleAliasFileNameConverter}">
            <Binding Source="{StaticResource GameDebuggingWindowTitle}" />
            <Binding Path="Alias" />
            <Binding Path="FilePath" Converter="{StaticResource FileName}" />
        </MultiBinding>
    </m:GlassWindow.Title>
    <Border Name="Status" x:FieldModifier="private" CornerRadius="5" BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBox Name="OutputBox" AcceptsTab="True" AcceptsReturn="True" IsReadOnly="True" x:FieldModifier="private"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnlyCaretVisible="True" />
            <Button Grid.Row="1" Content="{StaticResource AbortGame}" Click="AbortGame" />
        </Grid>
    </Border>
</m:GlassWindow>
