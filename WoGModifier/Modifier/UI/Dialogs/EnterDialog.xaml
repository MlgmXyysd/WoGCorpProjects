<Window x:Class="Mygod.WorldOfGoo.Modifier.UI.Dialogs.EnterDialog" xmlns:m="http://schemas.mygod.tk/wpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" WindowStyle="ToolWindow" Loaded="Load"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="400" SizeToContent="Height"
        Icon="{x:Static m:CurrentApp.MainIcon}">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <m:AutoCompleteBox Name="EnterBox" TextChanged="CheckValid" />
            <m:IntegerUpDown Name="Int32Box" ValueChanged="CheckValid" />
            <m:DoubleUpDown Name="DoubleBox" ValueChanged="CheckValid" />
            <Button Content="{StaticResource Browse}" Click="Browse" Name="BrowseButton"
                    Margin="4,0,0,0" Grid.Column="1" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">
            <Button Content="{StaticResource OK}" Name="OKButton" x:FieldModifier="private" IsDefault="True"
                    Margin="0,0,4,0" Click="Accept" MinWidth="80" />
            <Button Content="{StaticResource Cancel}" IsCancel="True" Click="Cancel" MinWidth="80" />
        </StackPanel>
        <TextBlock Visibility="Collapsed" Name="ErrorMessage" x:FieldModifier="private" Foreground="Red" />
    </StackPanel>
</Window>
